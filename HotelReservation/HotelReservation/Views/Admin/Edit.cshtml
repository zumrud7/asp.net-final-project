@model User
@{
    ViewBag.Title = "Edit";
}

    <div class="page">
        <div id="customer">

            <div class="header">
                <div class="row">
                    <div class="col-9">
                        <h1><i class="fas fa-list"></i>EDIT ADMIN</h1>
                    </div>


                </div>
            </div>



            <div class="create">
                <form method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="form-group">
                        @Html.LabelFor(m => m.FullName)
                        @Html.TextBoxFor(m => m.FullName, null, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName)
                        @Html.TextBoxFor(m => m.UserName, null, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, null, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        @Html.TextBoxFor(m => m.Password, null, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.GroupId)
                        @Html.DropDownListFor(m => m.GroupId, new SelectList(ViewBag.Groups, "id", "name"), new { @class = "form-control" })

                    </div>
                    <div class="form-row">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-success">Update</button>

                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>


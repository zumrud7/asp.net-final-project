@model Menu
@{
    ViewBag.Title = "Edit";
}

<div class="page">
    <div id="customer">

        <div class="header">
            <div class="row">
                <div class="col-9">
                    <h1><i class="fas fa-utensils"></i>FOOD & BEVERAGE</h1>
                </div>

            </div>
        </div>

        <div class="create">
            <form method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="form-group">
                    @Html.LabelFor(m => m.Name)
                    @Html.TextBoxFor(m => m.Name, null, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Count)
                    @Html.TextBoxFor(m => m.Count, null, new { @class = "form-control", @type = "number" })

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Price)
                    @Html.TextBoxFor(m => m.Price, null, new { @class = "form-control", @type = "number" })

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.CategoryId)
                    @Html.DropDownListFor(m => m.CategoryId, new SelectList(ViewBag.Categories, "Id", "name"), new { @class = "form-control" })

                </div>

                <div class="form-row">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-success">Update</button>

                    </div>
                </div>
            </form>
        </div>

    </div>
</div>

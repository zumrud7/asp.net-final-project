@model List<Customer>
@{
    ViewBag.Title = "Index";
}
<div class="page">
    <div id="customer">

        <div class="header">
            <div class="row">
                <div class="col-9">
                    <h1><i class="fas fa-user-tie"></i>CUSTOMER LIST</h1>
                </div>
                <div class="col-3 text-right">
                    <a href="@Url.Action("create","customer")" class="btn btn-success">Create New Customer</a>
                </div>

            </div>
        </div>

        <div class="customer-list">
            <table class="table table-hover">
                <thead>
                    <tr style="background-color:black">
                        <th></th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Customer Type</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="width:20%">
                                <div class="icon">
                                    <img src="~/Public/assets/images/image-gallery/429588-200.png" alt="">
                                </div>
                            </td>
                            <td style="width:20%">
                                <h6>@item.FirstName</h6>
                            </td>
                            <td style="width:20%">
                                <h6>@item.LastName</h6>
                            </td>
                            <td style="width:20%">
                                <h6>@item.CustomerType.Name</h6>
                            </td>
                            <td style="width:20%">
                                <a href="@Url.Action("edit", new { id=item.Id})" style="width:90px;" class="btn btn-primary mb-1">Edit</a>
                                <a onclick="return confirm('Are you sure to delete @item.FirstName @item.LastName?')"href="@Url.Action("delete", new { id=item.Id})" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }



                </tbody>
            </table>
        </div>

    

    </div>
</div>


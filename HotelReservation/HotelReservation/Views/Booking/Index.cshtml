@model List<Booking>
@{
    ViewBag.Title = "Index";
}

    <div class="page">
        <div id="room">

            <div class="header">
                <div class="row">
                    <div class="col-9">
                        <h1><i class="fas fa-sticky-note"></i>BOOKING LIST</h1>
                    </div>
                    <div class="col-3 text-right">
                        <a href="@Url.Action("create","booking")" class="btn btn-success">Create New Booking</a>
                    </div>

                </div>
            </div>

            <div class="room-list">
                <table class="table table-hover">
                    <thead>
                        <tr style="background-color:black">
                            <th>Room</th>
                            <th>Check-In</th>
                            <th>Check-Out</th>
                            <th>Customer</th>
                            <th>Menu</th>
                            <th>User</th>
                            <th>Price</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @item.Room.Number
                            </td>
                            <td>
                                @item.CheckIn.ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @item.CheckOut.ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @item.Customer.FirstName @item.Customer.LastName
                            </td>
                            <td>
                                @item.Menu.Name
                            </td>
                            <td>
                                @item.User.UserName
                            </td>
                            <td>
                                <h6 class="price p-1" style="border-radius:5px">@item.TotalPrice $</h6>
                            </td>
                            <td>
                                <a href="@Url.Action("edit", new { id=item.Id})" class="btn btn-primary mb-1" style="width:90px;">Edit</a>
                                @*<a onclick="return confirm('Are you sure to delete Room No: @item.Number?')" href="@Url.Action("delete", new { id=item.Id})" class="btn btn-danger">Delete</a>*@
                                <button type="button" class="btn btn-status active">@item.Status</button>
                            </td>
                        </tr>
                        }




                    </tbody>
                </table>
            </div>



        </div>
    </div>

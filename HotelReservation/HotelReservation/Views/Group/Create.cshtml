@model Group
@{
    ViewBag.Title = "Create";
}

<div class="page">
    <div id="customer">

        <div class="header">
            <div class="row">
                <div class="col-6">
                    <h1><i class="fas fa-user-tag"></i>NEW USER ROLE</h1>
                </div>

            </div>
        </div>


        <div class="create">
            <form method="post">

                <div class="form-group">
                    @Html.LabelFor(m => m.Name)
                    @Html.TextBoxFor(m => m.Name, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
                <div class="form-row">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-success">Create</button>

                    </div>
                </div>
            </form>
        </div>

    </div>
</div>


@model List<Room>
@{
    ViewBag.Title = "Index";
}

<div class="page">
    <div id="room">

        <div class="header">
            <div class="row">
                <div class="col-9">
                    <h1><i class="fas fa-hotel"></i>ROOM LIST</h1>
                </div>
                <div class="col-3 text-right">
                    <a href="@Url.Action("create","room")"class="btn btn-success">Create New Room</a>
                </div>

            </div>
        </div>

        <div class="room-list">
            <table class="table table-hover">
                <thead>
                    <tr style="background-color:black">
                        <th>Photo</th>
                        <th>Description</th>
                        <th>Room No:</th>
                        <th>Bed Type</th>
                        <th>Price</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="width:20%">
                                <div class="photo">
                                    <img src="@item.Photo" alt="">
                                </div>
                            </td>
                            <td style="width:35%">
                                @item.Description
                            </td>
                            <td style="width:12%">
                                <p>Room No:</p>
                                <h6>@item.Number</h6>
                            </td>
                            <td style="width:10%">
                                <div class="icon">
                                    <img src="~/Public/assets/images/image-gallery/icon-bed-0.jpg" alt="">
                                </div>
                            </td>
                            <td style="width:10%">
                                <p>Price:</p>
                                <h6 class="price">@item.Price</h6>
                            </td>
                            <td style="width:13%">
                                <a href="button" class="btn btn-primary">Edit</a>
                                <a href="button" class="btn btn-danger">Delete</a>
                                <a href="button" class="btn btn-status active">@item.Status</a>
                            </td>
                        </tr>
                    }


                    

                </tbody>
            </table>
        </div>

       

    </div>
</div>

